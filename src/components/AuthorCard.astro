---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
const { name, bio, github, avatar, linkedIn, twitter, subtitle } = author.data;
---

<div class="max-w-lg mx-auto my-4 bg-white rounded-lg shadow-md p-5">
  <Image
    src={avatar}
    class="w-32 h-32 rounded-full mx-auto"
    alt="Profile picture"
    width="200"
    height="200"
  />
  <h2 class="text-center text-2xl font-semibold my-2!">{name}</h2>
  <p class="text-center text-gray-600! my-2!">{subtitle}</p>
  <div class="flex justify-center mt-5">
    <a
      href=`https://x.com/${twitter}`
      class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a
    >
    <a href={linkedIn} class="text-blue-500 hover:text-blue-700 mx-3"
      >LinkedIn</a
    >
    <a href={github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold text-gray-600! my-2!">Bio</h3>
    <p class="text-gray-600! my-2!">
      {bio}
    </p>

    <div class="flex justify-end">
      <a href={`/blog/${author.id}`}>Leer m√°s...</a>
    </div>
  </div>
</div>
