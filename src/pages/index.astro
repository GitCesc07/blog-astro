---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import TypedBlogPost from "src/components/TypedBlogPost.astro";
import '../styles/global.css'

const blogPosts = await getCollection("blog", (post) => post.data.isDraft === false);
---

<MainLayout title="Cesc's blog">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="flex items-center justify-start gap-x-4">
        <a class="btn-paginado" href="/blog/1">Blog p√°ginado</a>
        <a class="btn-paginado" href="/authors">Autores</a>
      </div>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPosts.map((post) => <TypedBlogPost post={post} />)}
      </div>
    </div>
  </section>
</MainLayout>
