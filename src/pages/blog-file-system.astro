---
import BlogPost from "../components/BlogPost.astro";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";

// Define the expected type for your post frontmatter and content
type Post = {
  frontmatter: Record<string, any>;
  [key: string]: any;
};

const posts = Object.values(
  import.meta.glob<Post>("./posts/*.{md,mdx}", { eager: true })
);
---

<MainLayout title="Cesc's blog">
  <!-- component -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
