---
import { Image } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";
import post05Img from "@images/post-05.png";

import "../../styles/global.css";
import { Picture } from "astro:assets";
---

<MainLayout title="Imágenes">
  <h1 class="text-5xl">Imágenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    alt="post-05"
    width="250"
    height="250"
  />

  <Image
    style={{
      width: "250px",
      height: "250px",
    }}
    src={post05Img}
    alt="post-05"
    width="250"
    height="250"
  />

  <h1>Quality low</h1>
  <Image quality="low" src={post05Img} alt="post-05" width="500" height="500" />

  <h1>Quality high</h1>
  <Image
    quality="high"
    src={post05Img}
    alt="post-05"
    width="500"
    height="500"
  />

  <h1>Forma de cambiar formatos</h1>

  <h2>avif</h2>
  <Image format="avif" src={post05Img} alt="post-05" width="500" height="500" />

  <h2>jpeg</h2>
  <Image format="jpeg" src={post05Img} alt="post-05" width="500" height="500" />

  <h1>Picture</h1>
  <Picture
    formats={["webp", "avif", "png"]}
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(min-width: 360px) 240px, (max-width: 720) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} 
    src={post05Img}
    alt="post-05"
    width="500"
    height="500"
  />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    alt="post-05"
    width="250"
    height="250"
  />
</MainLayout>
